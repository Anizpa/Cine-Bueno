<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagenPeli"
        android:layout_width="96dp"
        android:layout_height="96dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nombrePeli"
                android:layout_width="222dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/valoracion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/valoracion"
                android:layout_width="86dp"
                android:layout_height="43dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="52dp"
                android:text="TextView"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nombrePeli"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categoria"
                android:layout_width="217dp"
                android:layout_height="21dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/valoracion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombrePeli" />

            <Button
                android:id="@+id/verPeli"
                android:layout_width="158dp"
                android:layout_height="48dp"
                android:layout_marginStart="68dp"
                android:layout_marginEnd="68dp"
                android:layout_marginBottom="4dp"
                android:text="Ver pelicula"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
